<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoTitle.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.ToolBar" parent="AppTheme">
        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:windowActionBarOverlay">@style/ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <!--修改toolbar的Title颜色.正确-->
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定菜单字体颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>



    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>


    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- toolbar弹出菜单样式 -->
    <!--<item name="android:colorBackground">@color/colorPrimary</item>-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--设置背景-->
      <!--  <item name="android:background">#aa000000</item>-->
        <!--设置字体颜色-->
        <item name="android:textColor">@color/white</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar_Yellow_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_small</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="RatingBar_Yellow_Middle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_yellow_middle</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/fab_menu_colorNormal</item>
        <item name="fab_colorPressed">@color/fab_menu_colorPressed</item>
        <item name="fab_colorRipple">@color/fab_menu_colorRipple</item>
    </style>

</resources>
